{
    "env": {
        "browser": true,
        "es6": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "allowImportExportEverywhere": true
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/jsx-key": 0,
        "getter-return": "error",
        "for-direction": "error",
        "react/prop-types": 0
    },
    "globals": {
        "import": false,
        "module": false,
        "process": false,
        "require": false,
        "__dirname": false,
        "describe": false,
        "it": false,
        "beforeEach": false,
        "afterEach": false,
        "document": false,
        "navigator": false,
        "window": false,
        "DIVA_BASE_MANIFEST_SERVER": false,
        "JSON_BASE_SERVER": false,
        "PRODUCTION": false,
        "DEBUG": false
    }
}